#include <stdio.h>
int str_length(char s[]){
    int i=0;
    while(s[i]!='\0'){
        i++;
    }
    return i;
}
int str_compare(char a[], char b[]){
    int i=0;
    while(a[i]!='\0'&& b[i]!='\0'){
        if(a[i]!=b[i]){
            return a[i]-b[i];
        }
        i++;
    }
    return a[i]-b[i];
}
void str_copy(char dest[],char src[]){
    int i=0;
    while(src[i]!='\0'){
        dest[i]=src[i];
        i++;
    }
    dest[i]='\0';
}
void str_concat(char dest[],char src[]){
    int i=0,j=0;
    while(dest[i]!='\0'){
        i++;
    }
    while(src[j]!='\0'){
        dest[i]=src[j];
        i++;
        j++;
    }
    dest[i]='\0';
}
int main(){
    char str1[100],str2[100],result[200];
    int choice;
    do{
        printf("\n====== SIMPLE STRING MANAGER ======\n");
        printf("1. Compare Strings\n");
        printf("2. Copy String\n");
        printf("3. Find Length of String\n");
        printf("4. Concatenate Strings\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        switch(choice){
            case 1:
                printf("Enter first string: ");
                scanf("%s",str1);
                printf("Enter second string: ");
                scanf("%s",str2);
                if(str_compare(str1,str2) ==0)
                    printf("Strings are EQUAL.\n");
                else
                    printf("Strings are NOT equal.\n");
                break;
            case 2:
                printf("Enter string to copy: ");
                scanf("%s",str1);
                str_copy(result,str1);
                printf("Copied String: %s\n",result);
                break;
            case 3:
                printf("Enter a string: ");
                scanf("%s", str1);
                printf("Length of string: %d\n",str_length(str1));
                break;
            case 4:
                printf("Enter first string: ");
                scanf("%s",str1);
                printf("Enter second string to append: ");
                scanf("%s",str2);
                str_copy(result,str1);
                str_concat(result,str2);
                printf("Concatenated String: %s\n",result);
                break;
            case 5:
                printf("Goodbye!\n");
                break;
            default:
                printf("Invalid choice!\n");
        }
    } while(choice!=5);
    return 0;
}
