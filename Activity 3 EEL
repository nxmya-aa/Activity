#include <stdio.h>
#include <string.h>
int main(){
    int id,days,billno;
    char name[100],phone[20],type[20],ailment[100],payment[50],billtime[30];
    float roomcharge,doctorfee,medicinecost,labtests,misc,subtotal;
    float gstrate=0.05;
    float gstamt,discountpercent,discountamt,totalbill;
    printf("Enter bill number: ");
    scanf("%d",&billno);
    printf("Enter time and date(in the format eg.10:30AM, 6-10-2025): ");
    scanf("%s",&billtime);
    printf("Enter patient ID: ");
    scanf("%d",&id);
    printf("Enter patient name: ");
    scanf("%s",&name);
    printf("Enter patient's phone number: ");
    scanf("%s",&phone);
    printf("Enter patient type(OPD/IPD): ");
    scanf("%s",&type);
    printf("Enter patient's ailment/disease: ");
    scanf("%s",&ailment);
    printf("Enter number of days admitted: ");
    scanf("%d",&days);
    printf("Enter room charge per day: ");
    scanf("%f",&roomcharge);
    printf("Enter doctor's fee: ");
    scanf("%f",&doctorfee);
    printf("Enter medicine cost: ");
    scanf("%f",&medicinecost);
    printf("Enter lab test charges: ");
    scanf("%f",&labtests);
    printf("Enter miscellaneous charges: ");
    scanf("%f",&misc);
    printf("Enter discount percentage: ");
    scanf("%f",&discountpercent);
    printf("Enter payment method(Cash/card/UPI etc.): ");
    scanf("%s",&payment);
    float roomtotal=days*roomcharge;
    subtotal=roomtotal+doctorfee+medicinecost+labtests+misc;
    gstamt=subtotal*gstrate;
    discountamt=subtotal*(discountpercent/100);
    totalbill=subtotal+gstamt-discountamt;
    printf("\n==============================================\n");
    printf("            SHASHWAT HOSPITAL\n");
    printf("        22, Happy Colony, Kothrud,\n\t\tPune, Maharashtra 411052\n");
    printf("           Phone:  020 2530 9900\n");
    printf("==============================================\n");
    printf("Bill No: %d\t\tTime/Date: %s\n",billno,billtime);
    printf("----------------------------------------------\n");
    printf("Patient ID   : %d\n",id);
    printf("Patient Name : %s\n",name);
    printf("Phone        : %s\n",phone);
    printf("Patient Type : %s\n",type);
    printf("Ailment      : %s\n",ailment);
    printf("Days Admitted: %d\n",days);
    printf("----------------------------------------------\n");
    printf("%-25s %10s %10s\n", "Item", "Amount", "Total");
    printf("----------------------------------------------\n");
    printf("%-25s %10.2f %10.2f\n", "Room Charges (per day)",roomcharge,roomtotal);
    printf("%-25s %10s %10.2f\n", "Doctor Fee", "",doctorfee);
    printf("%-25s %10s %10.2f\n", "Medicine Cost", "",medicinecost);
    printf("%-25s %10s %10.2f\n", "Lab Tests", "",labtests);
    printf("%-25s %10s %10.2f\n", "Misc. Charges", "",misc);
    printf("----------------------------------------------\n");
    printf("%-25s %10s %10.2f\n", "SUBTOTAL", "",subtotal);
    printf("%-25s %10.2f %10s\n", "GST(5%)",gstamt, "");
    printf("%-25s %10.2f %10s\n", "Discount",-discountamt, "");
    printf("----------------------------------------------\n");
    printf("%-25s %10s %10.2f\n", "NET PAYABLE", "",totalbill);
    printf("----------------------------------------------\n");
    printf("Payment Method: %s\n",payment);
    printf("Thank you for choosing Shashwat Hospital.\n");
    printf("Get well soon!\n");
    printf("==============================================\n");
    return 0;
}
